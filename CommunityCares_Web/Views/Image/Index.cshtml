@model IEnumerable<CommunityCares_Web.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="image-grid">
    @foreach (var item in Model)
    {
        if (item == Model.First())
        {
            <div class="image-details">
                <p>Campaña: @item.IdCampaignNavigation.Name</p>
            <p>Requerimientos: @item.IdCampaignNavigation.Requirement</p>
            <p>Fecha de Inicio: @item.IdCampaignNavigation.InitialDate</p>
            <p>Fecha de cierre: @item.IdCampaignNavigation.CloseDate</p>
            <p>Asilo: @item.IdCampaignNavigation.IdAssylumNavigation.Name</p>
        </div>
        }

        <div class="image-card">
            <div class="image-wrapper">
                <img src="@item.Url" class="image" />
            </div>
        </div>
    }
</div>

<style>
    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .image-card {
        border: 1px solid #ccc;
        padding: 10px;
    }

    .image-wrapper {
        height: 200px;
        overflow: hidden;
    }

    .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-details {
        margin-top: 10px;
    }

    .actions {
        margin-top: 10px;
    }
</style>
