    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionItems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionMonto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
