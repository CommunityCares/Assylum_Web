                @Html.DisplayFor(modelItem => item.IdCampaignNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCollectsNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDonnorsNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
