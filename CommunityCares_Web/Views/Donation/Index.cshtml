                @Html.DisplayNameFor(model => model.IsReceived)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCampaignNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCollectsNavigation)
