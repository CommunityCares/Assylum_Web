@model IEnumerable<CommunityCares_Web.Models.Donation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionMonto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
